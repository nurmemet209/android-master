            <RelativeLayout
                android:id="@+id/stage_pay"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginBottom="@dimen/main_big_divider_height"
                android:background="@drawable/list_item_bg_"
                android:clickable="true"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"

                >

                <TextView
                    android:id="@+id/bbbbb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/installment_mayment"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/go"
                    android:gravity="center_vertical"
                    android:text="@string/installment_payment"

                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/bbbbb"
                    />

            </RelativeLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/main_big_divider_height"
                android:padding="@dimen/padding_normal"
                >

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="@dimen/padding_big"
                        android:text="@string/factory_number_"
                        />

                    <TextView
                        android:id="@+id/factory_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="00001"
                        />
                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="@dimen/padding_big"
                        android:text="@string/brand_"
                        />

                    <TextView
                        android:id="@+id/brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="00001"
                        />
                </TableRow>


                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="@dimen/padding_big"
                        android:text="@string/stock_"
                        />

                    <TextView
                        android:id="@+id/stock_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="00001"
                        />
                </TableRow>


                <TableRow

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingRight="@dimen/padding_big"
                        android:text="@string/freight_"
                        />

                    <TextView
                        android:id="@+id/freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="00001"
                        />
                </TableRow>
            </TableLayout>


