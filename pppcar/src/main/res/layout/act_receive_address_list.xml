<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_bg_gray"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_bar_height"
        android:background="@color/white"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/receive_address"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"

        >

        <LinearLayout
            android:id="@+id/receive_address_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg_gray"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_big_divider_height"
                android:clickable="true"
                android:onClick="selectAddress"
                android:paddingBottom="@dimen/padding_big"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:paddingTop="@dimen/padding_big"

                >

                <ImageView
                    android:id="@+id/logistic_"
                    android:layout_width="@dimen/icon_width"
                    android:layout_height="@dimen/icon_width"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/image_view_checkbox"
                    android:tag="selector"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/logistic_"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_normal"
                    >

                    <TextView
                        android:id="@+id/logistic_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="张三 13879921613"
                        />

                    <TextView
                        android:id="@+id/logistic_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_big"
                        android:text="上海嘉定南翔镇"
                        android:textColor="@color/main_sub_text_color"
                        android:textSize="@dimen/text_size_small"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_width"
                            android:background="@color/transparent"
                            android:scaleType="centerInside"
                            android:src="@mipmap/edit"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/edit"
                            android:textSize="@dimen/text_size_small"
                            android:gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_smallest"
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:clickable="true"
                        >

                        <ImageView
                            android:layout_width="@dimen/icon_width"
                            android:layout_height="@dimen/icon_width"
                            android:background="@color/transparent"
                            android:scaleType="centerInside"
                            android:src="@mipmap/delete"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/delete"
                            android:textSize="@dimen/text_size_small"
                            android:gravity="center"
                            />

                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>



        </LinearLayout>


    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_receive_address"
        android:textColor="@color/white"
        android:background="@drawable/main_red_pressed_sl"
        android:layout_margin="@dimen/padding_big"
        />

</LinearLayout>