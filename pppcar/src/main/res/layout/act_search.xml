<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bottom_bar_height"
        android:background="@color/main_bg_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"


        >


        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@mipmap/back"

            />


        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_width"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_normal"
            android:layout_marginRight="@dimen/padding_normal"
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:hint="@string/search_hint"
            android:maxLines="1"
            android:onClick="search"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            />

        <ImageButton
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_smallest"
            android:scaleType="centerInside"
            android:src="@mipmap/search"


            />
    </LinearLayout>

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_biggest"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:text="@string/hot_search"
                android:textStyle="bold"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/padding_big"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingRight="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_big"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/circle_red_sl"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/padding_smallest"
                        android:text="lskdfjdkffdsfdsfdsfdsf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_small"
                        android:layout_marginRight="@dimen/padding_small"
                        android:background="@drawable/circle_red_sl"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/padding_smallest"
                        android:text="lskdfjdkf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_small"
                        android:background="@drawable/circle_red_sl"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/padding_smallest"
                        android:text="lskdfjdkf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_small"
                        android:background="@drawable/circle_red_sl"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/padding_smallest"
                        android:text="lskdfjdkf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_small"
                        android:background="@drawable/circle_red_sl"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/padding_smallest"
                        android:text="lskdfjdkf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_small"
                        android:background="@drawable/circle_red_sl"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/padding_smallest"
                        android:text="lskdfjdkf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/padding_small"
                        android:background="@drawable/circle_red_sl"
                        android:clickable="true"
                        android:gravity="center"
                        android:padding="@dimen/padding_smallest"
                        android:text="lskdfjdkf"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_smaller"
                        />

                </LinearLayout>


            </HorizontalScrollView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:text="@string/search_history"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:divider="@drawable/divider_small"
                android:orientation="vertical"
                android:showDividers="middle"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:paddingBottom="@dimen/padding_big"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingRight="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_big"
                    android:text="lskdfjdkf"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:paddingBottom="@dimen/padding_big"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingRight="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_big"
                    android:text="lskdfjdkf"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:paddingBottom="@dimen/padding_big"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingRight="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_big"
                    android:text="lskdfjdkf"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:paddingBottom="@dimen/padding_big"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingRight="@dimen/padding_normal"
                    android:paddingTop="@dimen/padding_big"
                    android:text="lskdfjdkf"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_biggest"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:background="@drawable/rectangle_gray_sl"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_normal"

                    >

                    <ImageView
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_width"
                        android:layout_gravity="center"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@mipmap/delete"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingRight="@dimen/padding_smallest"
                        android:text="@string/clear_search_history"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
      <!--未搜到-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="80dp"
            >
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/not_found"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/not_found_hint"
                android:paddingTop="@dimen/padding_big"
                android:textColor="@color/main_sub_text_color"
                />

        </LinearLayout>
        <!--搜索结果-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <com.lhh.apst.library.AdvancedPagerSlidingTabStrip
                android:id="@+id/tab_container"
                style="@style/pagertab_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/main_bottom_bar_height"
                android:fillViewport="false"
                />


            <com.cn.viewpager.CustomViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </LinearLayout>
        <!--搜索实时提示-->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        </android.support.v7.widget.RecyclerView>


    </ViewFlipper>


</LinearLayout>