                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/main_big_divider_height"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                >

                <TextView
                    android:id="@+id/pay_amount_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/stage_amount_"
                    />

                <TextView
                    android:id="@+id/pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/pay_amount_"
                    android:text="$23424"
                    android:textColor="@color/main_red"
                    />

                <TextView
                    android:id="@+id/counter_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="$324324"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/counter_fee"
                    android:text="@string/counter_fee_"
