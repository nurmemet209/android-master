                    android:layout_height="@dimen/item_height"
                    android:paddingLeft="@dimen/padding_normal"
                    android:paddingRight="@dimen/padding_normal"
                    android:background="@drawable/list_item_bg"
                    android:clickable="true"
                    android:onClick="selectPayStage"

                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="vertical"

                        >

                        <TextView
                            android:id="@+id/stage_1_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/padding_smallest"
                            android:text="@string/order_number"
                            android:textSize="@dimen/text_size_small"
                            />

                        <TextView
                            android:id="@+id/stage_1_counter_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="1243423432432"
                            android:textSize="@dimen/text_size_smaller"
                            />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/stage_1_check_box"
                        android:layout_width="@dimen/icon_width"
                        android:layout_height="@dimen/icon_width"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/image_view_checkbox"
                        android:scaleType="centerInside"
                        android:tag="selector"
