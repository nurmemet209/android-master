<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
    >


    <LinearLayout
        android:layout_marginTop="15dp"
        android:paddingTop="@dimen/padding_normal"
        android:paddingBottom="@dimen/padding_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <com.cn.pppcar.widget.CheckableLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            >

        </com.cn.pppcar.widget.CheckableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_normal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                              >
                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="总额:$7866"
                    android:textColor="@color/main_sub_text_color"
                    />
                <TextView
                    android:id="@+id/perferential_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/main_sub_text_color"
                    android:text="优惠价：￥897"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/pre_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预付款:$45545"
                android:textColor="@color/main_sub_text_color"
                android:layout_marginTop="@dimen/padding_normal"
                />
            <TextView
                android:id="@+id/shuld_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本次应付:$45545"
                android:layout_marginTop="@dimen/padding_normal"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_width"
        android:src="@mipmap/close"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/padding_normal"
        />
</RelativeLayout>