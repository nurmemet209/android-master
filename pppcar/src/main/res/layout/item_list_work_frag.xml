<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingLeft="@dimen/padding_normal"
              android:paddingRight="@dimen/padding_normal"
              android:paddingBottom="@dimen/padding_big"
              android:paddingTop="@dimen/padding_big"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height"
        android:layout_marginBottom="@dimen/padding_normal"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_portrait"
            android:layout_width="@dimen/item_height"
            android:layout_height="@dimen/item_height"
            android:layout_centerVertical="true"
            app:actualImageScaleType="centerInside"
            app:placeholderImage="@mipmap/head_portrait"
            android:padding="4dp"
            app:placeholderImageScaleType="center"
            />
        <TextView
            android:id="@+id/phone_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13072182811"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/head_portrait"
            android:textColor="@color/main_sub_text_color"
            />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2016-4-06"
            android:layout_centerVertical="true"
            android:textColor="@color/main_sub_text_color"
            />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/title_img"
            android:layout_width="@dimen/list_item_img_height"
            android:layout_height="@dimen/list_item_img_height"
            />

        <ImageView
            android:id="@+id/go"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_width"
            android:src="@mipmap/go"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/title_img"
            android:paddingLeft="@dimen/padding_normal"
            android:paddingRight="@dimen/padding_normal"
            android:layout_toLeftOf="@+id/go"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingBottom="@dimen/padding_normal"
                android:text="sdfsdfdsfdsfsdfds"
                />
            <TextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="sdfdsfdsfdsfds"
                android:textColor="@color/main_sub_text_color"
                android:textSize="@dimen/text_size_smaller"
                />


        </LinearLayout>



    </RelativeLayout>

</LinearLayout>