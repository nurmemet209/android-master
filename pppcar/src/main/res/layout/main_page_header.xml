<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/lightgray_1"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/red"
            />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/banner_indicator"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            app:ci_animator="@anim/indicator_no_animator"
            app:ci_drawable="@drawable/indicator_red_radius"
            app:ci_drawable_unselected="@drawable/indicator_white_radius"
            app:ci_width="6dp"
            app:ci_height="6dp"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/brand_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/brand_center"
            />

        <TextView
            android:id="@+id/auction_center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/auction_center"
            />

        <TextView
            android:id="@+id/refit_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/refit_shop"
            />

        <TextView
            android:id="@+id/my_order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/my_order"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray_1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:divider="@drawable/divider_small"
        android:dividerPadding="2dp"
        android:orientation="horizontal"
        android:showDividers="middle"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />


        <TextView
            android:id="@+id/papa_headline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_normal"
            android:text="头条轮播"
            android:textSize="@dimen/text_size_normal"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_big"
        android:background="@color/lightgray_1"
        />
    <!--综合-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:divider="@drawable/divider_small"
        android:orientation="vertical"
        android:showDividers="middle"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@drawable/divider_small"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/universal_1_big"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                app:actualImageScaleType="fitXY"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/universal_1_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:actualImageScaleType="fitXY"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@drawable/divider_small"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/universal_2_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:actualImageScaleType="fitXY"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/universal_2_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:actualImageScaleType="fitXY"
                />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/universal_2_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:actualImageScaleType="fitXY"
                />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_big"
        android:background="@color/lightgray_1"
        />
    <!--排气-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"

        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/padding_big"
            android:text="@string/exhaust"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:divider="@drawable/divider_small"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/exhaust_left_big"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:actualImageScaleType="fitXY"

                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@drawable/divider_small"
                android:orientation="vertical"
                android:showDividers="middle"
                android:weightSum="2"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/exhaust_right_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:actualImageScaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:divider="@drawable/divider_small"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:weightSum="2"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/exhaust_right_2_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:actualImageScaleType="fitXY"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/exhaust_right_2_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:actualImageScaleType="fitXY"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_big"
        android:background="@color/lightgray_1"
        />
    <!--避震-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/padding_big"
            android:text="@string/shock_absorber"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:divider="@drawable/divider_small"
            android:showDividers="middle"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/shock_left_big"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:actualImageScaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@drawable/divider_small"
                android:orientation="vertical"
                android:showDividers="middle"
                android:weightSum="2"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/shock_right_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:actualImageScaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:divider="@drawable/divider_small"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:weightSum="2"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/shock_right_2_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:actualImageScaleType="fitXY"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/shock_right_2_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:actualImageScaleType="fitXY"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_big"
        android:background="@color/lightgray_1"
        />
    <!--轮毂-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/padding_big"
            android:text="@string/hob"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:divider="@drawable/divider_small"
            android:showDividers="middle"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/hob_left_big"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:actualImageScaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:divider="@drawable/divider_small"
                android:orientation="vertical"
                android:showDividers="middle"
                android:weightSum="2"
                >

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/hob_right_1_1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:actualImageScaleType="fitXY"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/blue"
                    android:divider="@drawable/divider_small"
                    android:orientation="horizontal"
                    android:showDividers="middle"
                    android:weightSum="2"
                    >

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/hob_right_2_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:actualImageScaleType="fitXY"
                        />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/hob_right_2_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:actualImageScaleType="fitXY"
                        />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/padding_smaller"
        android:paddingTop="@dimen/padding_smaller"

        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:background="@color/lightgray"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/lightgray_1"
            android:gravity="center"
            android:padding="@dimen/padding_big"
            android:text="@string/hot_recommand"
            android:textStyle="bold"
            />


    </RelativeLayout>
</LinearLayout>