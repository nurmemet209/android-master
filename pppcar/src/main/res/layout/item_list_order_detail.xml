<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingBottom="@dimen/padding_normal"
              android:paddingTop="@dimen/padding_normal"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/title_img"
        android:layout_width="@dimen/list_item_img_height"
        android:layout_height="@dimen/list_item_img_height"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/title_img"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_normal"
        android:paddingRight="@dimen/padding_normal"

        >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingBottom="@dimen/padding_normal"
            android:text="sfdsfsdfd"
            />

        <TextView
            android:id="@+id/product_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_smallest"
            android:text="*1"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="$33443"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/apply_for_after_sales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle"
            android:padding="@dimen/padding_smallest"
            android:text="@string/apply_for_after_sales"
            android:textColor="@color/main_red"
            />
    </LinearLayout>

</LinearLayout>