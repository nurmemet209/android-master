<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
    >
    <CheckBox
        android:id="@+id/cart_item"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/padding_big"
        android:paddingRight="@dimen/padding_big"
        android:button="@drawable/checkbox_item"
        android:checked="false"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/title_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/cart_item"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/title_img"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal"
        >
        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            />
        <TextView
            android:id="@+id/item_item_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_title"
            android:textColor="@color/main_sub_text_color"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="ï¿¥150"
                android:textColor="@color/main_red"
                />
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/change_item_num"
                >

                <TableRow
                    android:divider="@drawable/divider_small"
                    android:showDividers="middle"
                    >

                    <TextView
                        android:id="@+id/minus"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        />
                    <EditText
                        android:id="@+id/item_num_et"
                        android:layout_width="45dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="3"
                        android:background="@drawable/transparent"
                        android:padding="@dimen/padding_smallest"
                        android:inputType="number"
                        />
                    <TextView
                        android:id="@+id/plus"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        />
                </TableRow>
            </TableLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>