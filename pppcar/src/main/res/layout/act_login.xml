<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/login_bg"
                android:orientation="vertical"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:layout_marginBottom="@dimen/padding_biggest_"
        >


        <EditText
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_login_btn"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@drawable/btn_login"
            android:paddingLeft="@dimen/padding_big"
            android:paddingRight="@dimen/padding_big"
            android:hint="请输入手机号"
            />

        <EditText
            android:id="@+id/passward"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_login_btn"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@drawable/btn_login"
            android:paddingLeft="@dimen/padding_big"
            android:paddingRight="@dimen/padding_big"
            android:hint="请输入密码"

            />

        <EditText
            android:id="@+id/verifycation_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/blue"
            android:visibility="gone"
            android:paddingLeft="@dimen/padding_big"
            android:paddingRight="@dimen/padding_big"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/main_login_btn"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@drawable/round_rect_main_red_to_main_re_pressed"
            android:onClick="login"
            android:text="登陆"
            android:textColor="@color/white"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@color/transparent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费注册"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码"
                android:textColor="@color/white"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@color/transparent"
            >

            <TextView
                android:id="@+id/three_part_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/padding_normal"
                android:paddingRight="@dimen/padding_normal"
                android:text="第三方登陆"
                android:textColor="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/three_part_login"
                android:background="@color/white"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/three_part_login"
                android:background="@color/white"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_normal"
            android:background="@color/transparent"
            >

            <ImageButton
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:layout_marginLeft="@dimen/padding_biggest_"
                />

            <ImageButton
                android:layout_width="@dimen/item_height"
                android:layout_height="@dimen/item_height"
                android:layout_marginRight="@dimen/padding_biggest_"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>