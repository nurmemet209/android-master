<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:background">@color/white</item>
        <item name="android:buttonStyle">@style/custom_button_style</item>
        <item name="android:textViewStyle">@style/custom_text_view_style</item>
        <item name="android:editTextStyle">@style/custom_eidt_text_style</item>
        <item name="android:imageButtonStyle">@style/custom_image_view_style</item>
        <item name="android:textCursorDrawable">@null</item>

    </style>

    <style name="custom_button_style" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="custom_text_view_style">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="custom_eidt_text_style" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="custom_image_view_style" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:background">@color/transparent</item>
    </style>


    <style name="pagertab_icon_style">
        <item name="android:background">@color/main_text_color</item>
        <item name="apTabBackground">@color/main_text_color</item>
        <item name="android:textSize">11sp</item>
        <item name="apTabUnderlineColor">@color/main_bg_gray</item>
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">8dp</item>
        <item name="apTabPaddingTopBottom">3dp</item>
        <item name="apTabTextSelectColor">@color/white</item>
        <item name="android:textColor">@color/main_sub_text_color</item>
    </style>


    <!--pager tab-->
    <style name="pagertab_style">
        <item name="android:background">@color/white</item>
        <item name="apTabBackground">@drawable/transparent</item>
        <!--<item name="android:textSize">13sp</item>-->
        <!--<item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>-->
        <item name="android:textColor">@color/main_text_color</item>
        <item name="apTabIndicatorColor">@color/main_red</item>
        <item name="apTabUnderlineColor">@color/transparent</item>
        <!--每一个tab之间的分割线-->
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">0dp</item>
        <item name="apTabDrawMode">normal</item>
        <!--选中的tab的文字的颜色-->
        <item name="apTabTextSelectColor">@color/main_red</item>
    </style>

    <!--pager tab 灰色背景-->
    <style name="pagertab_style_">
        <item name="android:background">@color/main_bg_gray</item>
        <item name="apTabBackground">@color/transparent</item>
        <!--<item name="android:textSize">13sp</item>-->
        <!--<item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>-->
        <item name="android:textColor">@color/main_text_color</item>
        <item name="apTabIndicatorColor">@color/main_red</item>
        <item name="apTabUnderlineColor">@color/transparent</item>

        <!--每一个tab之间的分割线-->
        <item name="apTabDividerColor">#00000000</item>
        <item name="apTabShouldExpand">false</item>
        <item name="apTabPaddingLeftRight">0dp</item>
        <item name="apTabDrawMode">normal</item>
        <item name="apTabUnderlineHeight">1dp</item>
        <!--<item name="apTabIndicatorHeight">1dp</item>-->
        <!--选中的tab的文字的颜色-->
        <item name="apTabTextSelectColor">@color/main_red</item>
    </style>


    <style name="base_dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="preferential_package_dlg" parent="base_dialog">
        <item name="android:windowAnimationStyle">@style/window_anim_top</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="dlg_pre_order" parent="base_dialog">
        <item name="android:windowAnimationStyle">@style/window_anim_bottom</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="dlg_pay_stage" parent="base_dialog">
        <item name="android:windowAnimationStyle">@style/window_anim_bottom</item>
    </style>
    <style name="dlg_product_attr_select" parent="base_dialog">
        <item name="android:windowAnimationStyle">@style/window_anim_bottom</item>
    </style>

    <style name="window_anim_bottom" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>

    </style>

    <style name="window_anim_top" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/top_out</item>
    </style>
</resources>
